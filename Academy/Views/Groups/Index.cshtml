@model IEnumerable<Academy.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.group_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weekdays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.group_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weekdays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.group_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.group_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.group_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
